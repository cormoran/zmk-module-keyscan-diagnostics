#include <dt-bindings/zmk/matrix_transform.h>
#include "my_awesome_keyboard_charlieplex-layouts.dtsi"

&physical_layout0 {
	transform = <&transform0>;
};

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,physical-layout = &physical_layout0;
	};
	
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-charlieplex";
		gpios
		= <&xiao_d 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
		, <&xiao_d 1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
		, <&xiao_d 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
		, <&xiao_d 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
		;
		debounce-press-ms = <5>;
		debounce-release-ms = <5>;
		debounce-scan-period-ms = <1>;
		poll-period-ms = <10>;
	};
	
	transform0: keymap_transform {
		compatible = "zmk,matrix-transform";
		columns = <4>;
		rows = <4>;
		map = <
		RC(0,1)  RC(0,2)  RC(0,3)
		RC(1,0)  RC(1,2)  RC(1,3)
		RC(2,0)  RC(2,1)  RC(2,3)
		RC(3,0)  RC(3,1)  RC(3,2)
		>;
	};
};
