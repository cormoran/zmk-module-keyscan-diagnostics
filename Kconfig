config ZMK_KEYSCAN_DIAGNOSTICS
    bool "Enable keyscan diagnostics module"

if ZMK_KEYSCAN_DIAGNOSTICS

config ZMK_KEYSCAN_DIAGNOSTICS_STUDIO_RPC
    bool "Enable keyscan diagnostics custom Studio RPC"
    depends on ZMK_STUDIO

config ZMK_KEYSCAN_DIAGNOSTICS_CHATTER_WINDOW_MS
    int "Chattering window (ms)"
    default 30
    range 5 200
    help
      Time window used to count rapid toggles that indicate chattering.

config ZMK_KEYSCAN_DIAGNOSTICS_CHATTER_BURST
    int "Chattering burst threshold"
    default 3
    range 2 10
    help
      Number of transitions inside the window needed to mark a chattering incident.

endif
